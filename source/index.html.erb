<section class="relative pb-5 -mt-5 text-center space-y-5 sm:space-y-10">
  <!-- Dark background block with dotted pattern -->
  <div class="relative overflow-hidden pt-10">
    <div class="absolute mx-2 sm:mx-6 inset-x-0 -z-1 rounded-b-xl bg-primary py-4 px-4 h-full bottom-[20%]">
        <div class="[background-image:radial-gradient(gray_1px,transparent_1px)] [background-size:15px_15px] w-1/2 h-full">
        </div>                  
    </div>

  <!-- Team Image (single big placeholder, overlapping) -->  
    <div class="flex justify-center">
      <img src="<%= responsive_image('hero.png') %>" 
