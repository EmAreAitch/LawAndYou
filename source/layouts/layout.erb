<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">    
    <title><%= current_page.data.title || "Middleman" %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;500;700&family=Merriweather:wght@700&display=swap" rel="stylesheet">    
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site", defer: true %>
    <%= stylesheet_link_tag "tailwind" %>
  </head>
  <body class="bg-gray-light">
    <header class="bg-primary rounded-xl px-8 py-4 mt-2 mx-2 sm:mt-4 sm:mx-6">
      <div class="flex items-center justify-between">
        <div class="text-white font-logo text-2xl leading-tight">
          Law<span class="block">&amp;You</span>
        </div>
    
        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center space-x-8 text-base font-sans">
          <a href="#" class="font-bold text-white border-b-2 border-white pb-1">Home</a>
          <a href="#" class="text-gray-dark hover:text-white">About-us</a>
          <a href="#" class="text-gray-dark hover:text-white">Services</a>
          <a href="#" class="text-gray-dark hover:text-white">Blog</a>
          <span class="h-6 w-px bg-gray-medium"></span>
          <a href="#" class="text-accent font-semibold hover:underline">Contact us</a>
        </nav>
    
        <!-- Mobile Hamburger -->
        <button class="md:hidden text-white focus:outline-none" id="menu-toggle">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    
      <!-- Mobile Menu -->
      <div id="mobile-menu"
           class="max-h-0 overflow-hidden transition-all duration-300 ease-in-out
                  bg-primary rounded-xl flex flex-col space-y-4 text-base font-sans">
        <a href="#" class="mt-6 font-bold text-white border-b-2 border-white pb-1">Home</a>
        <a href="#" class="text-gray-dark hover:text-white">About-us</a>
        <a href="#" class="text-gray-dark hover:text-white">Services</a>
        <a href="#" class="text-gray-dark hover:text-white">Blog</a>
        <a href="#" class="text-accent font-semibold hover:underline">Contact us</a>
      </div>
    </header>
    <main class="">
      <%= yield %>
    </main>
  </body>
</html>
